<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="BaseTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItemTextStyle" parent="BaseTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="SearchTextStyle" parent="ListItemTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ListItemArtistTextStyle" parent="ListItemTextStyle">
    </style>

    <style name="ListItemTrackTextStyle" parent="ListItemTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ListItemAlbumTextStyle" parent="ListItemTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerTextStyle" parent="BaseTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerArtistTextStyle" parent="PlayerTextStyle">
    </style>

    <style name="PlayerAlbumTextStyle" parent="PlayerTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerTrackTextStyle" parent="PlayerTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PlayerSeekbarStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:max">30</item>
    </style>

    <style name="PlayerSeekbarInlineStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:max">30</item>
    </style>

    <style name="PlayerButtonHorizontalStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="PlayerButtonVerticalStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="PlayerTimeStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
