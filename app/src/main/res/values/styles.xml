<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="BaseTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItemTextStyle" parent="BaseTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="SearchTextStyle" parent="ListItemTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ListItemArtistTextStyle" parent="ListItemTextStyle">
    </style>

    <style name="ListItemTrackTextStyle" parent="ListItemTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ListItemAlbumTextStyle" parent="ListItemTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerTextStyle" parent="BaseTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerArtistTextStyle" parent="PlayerTextStyle">
    </style>

    <style name="PlayerAlbumTextStyle" parent="PlayerTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerTrackTextStyle" parent="PlayerTextStyle">
        <item name="android:textStyle">italic</item>
    </style>







</resources>
